        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:text="7"
        />
    <Button
        android:id="@+id/btn_8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:text="8"
        />
    <Button
        android:id="@+id/btn_9"
        android:text="9"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/btn_del"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:text="DEL"
        />
    <Button
        android:id="@+id/btn_dec"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
