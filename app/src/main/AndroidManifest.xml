<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oycalculator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="OY快乐计算器"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CalculateVolume"
            android:screenOrientation="sensor"></activity>
        <activity
            android:name=".CalculateLength"
            android:screenOrientation="sensor" />
        <activity
            android:name=".OYDate"
            android:screenOrientation="sensor" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|layoutDirection|screenSize"
            android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>